<h1>Distributed Cloud Computing Platform</h1>

<h3>Join a pool</h3>

<form id="p_form" action="" method="post">
	<div class="form-group">
		<label for="p_tool">Tool</label>
		<select id="p_tool" name="p_tool" class="form-control">
		  <option value="">Choose...</option>
		  <option value="video">Video Converter</option>
		</select>
	</div>
	<div id="b_video" class="hide">
	  <div class="form-group">
		<label for="p_url">Join the video tool pool!</label>
		<input type="text" disabled="disabled" value="{{{command}}}" class="form-control">
		<p class="help-block">Run the above command to add your computer to the pool of hosts dedicated to the Video Converter tool!</p>
		<p class="help-block">Ensure to use my <b>PUBLIC IP</b> if you are outside the network used in the command</p>
	  </div>
	</div>
	<input type="hidden" name="action" value="join">
</form>

<script>
$(document).ready(function()
{
	$('#p_tool').on('click', function()
	{
		if($(this).val() === 'video')
			$('#b_video').removeClass('hide');
		else
			$('#b_video').addClass('hide');
	});
});
</script>
